{
  "name": "hls-duration-checker",
  "version": "1.0.0",
  "description": "A command to monitor HLS playlists and check if the duration of each segment exceeds the target duration",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "audit": "npm audit --audit-level high",
    "test": "npm run lint && npm run audit && node ./index.js",
    "start": "forever start -o server.log -e error.log ./index.js",
    "stop": "forever stop ./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuu/hls-duration-checker.git"
  },
  "keywords": [
    "HLS",
    "Streaming"
  ],
  "author": "Kuu Miyazaki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuu/hls-duration-checker/issues"
  },
  "homepage": "https://github.com/kuu/hls-duration-checker#readme",
  "dependencies": {
    "date-and-time": "^0.12.0",
    "forever": "^2.0.0",
    "hlx-lib": "0.0.29",
    "node-fetch": "^2.6.0",
    "time-stamp": "^2.2.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "xo": "^0.25.3"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "camelcase": 0,
      "capitalized-comments": 0,
      "dot-notation": 0,
      "import/no-dynamic-require": 0,
      "new-cap": 0,
      "no-cond-assign": 0,
      "no-mixed-operators": 0,
      "no-multi-assign": 0,
      "no-use-extend-native/no-use-extend-native": 0,
      "padding-line-between-statements": 0,
      "quotes": 0,
      "unicorn/catch-error-name": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-zero-fractions": 0
    }
  }
}
